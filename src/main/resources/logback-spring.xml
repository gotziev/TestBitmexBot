<configuration>
    <appender name="ClassAppender" class="ch.qos.logback.core.FileAppender">
        <file>/home/normat/IdeaProjects/BitmexBot/logs/bitmex_bot.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="AspectAppender" class="ch.qos.logback.core.FileAppender">
        <file>/home/normat/IdeaProjects/BitmexBot/logs/bot_application.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="bitmexbot.network.WebSocketHandler" level="DEBUG" additivity="false">
        <appender-ref ref="ClassAppender"/>
    </logger>
    <logger name="bitmexbot.service.BotFactory" level="DEBUG" additivity="false">
        <appender-ref ref="AspectAppender"/>
    </logger>

    <logger name="bitmexbot.aspect.LoggingAspect" level="DEBUG" additivity="false">
        <appender-ref ref="ClassAppender"/>
    </logger>

    <logger name="bitmexbot.network.WebSocketHandler" level="DEBUG" additivity="false">
        <appender-ref ref="ConsoleAppender"/>
    </logger>

    <logger name="bitmexbot.aspect.LoggingAspect" level="DEBUG" additivity="false">
        <appender-ref ref="AspectAppender"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="ConsoleAppender"/>
    </root>
</configuration>